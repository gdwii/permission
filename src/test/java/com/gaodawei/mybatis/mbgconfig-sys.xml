<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
	<classPathEntry location="D:\tool\apache-maven-3.2.2\repository\mysql\mysql-connector-java\5.1.29\mysql-connector-java-5.1.29.jar" />
	<context id="DB2Tables" targetRuntime="MyBatis3">
		<plugin type="mybatis.genertor.CustomSerializablePlugin" />
		<!-- 注释生成控制 -->
		<commentGenerator type="mybatis.genertor.CustomCommentGenerator">
			<property name="suppressAllComments" value="false" />
		</commentGenerator>

		<!-- JDBC 连接信息 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://localhost:3306/alading" userId="root"
			password="123456">
		</jdbcConnection>

		<javaTypeResolver>
			<property name="forceBigDecimals" value="true" />
		</javaTypeResolver>
	
		<!-- 数据表对应的model 层 -->
		<javaModelGenerator targetPackage="cn.qishidai.alading.system.model"
			targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<!-- sql mapper 隐射配置文件 -->
		<sqlMapGenerator targetPackage="cn.qishidai.alading.system.mapper"
			targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>

		<!-- 在ibatis2 中是dao层，但在mybatis3中，其实就是mapper接口 -->
		<javaClientGenerator type="MIXEDMAPPER"
			targetPackage="cn.qishidai.alading.system.mapper" targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>
		<table tableName="sys_staff" domainObjectName="Staff"
			enableCountByExample="false" enableUpdateByExample="false"
			enableDeleteByExample="false" enableSelectByExample="false"
			selectByExampleQueryId="false">
			<property name="useActualColumnNames" value="true" />
		</table>
		<table tableName="sys_organization" domainObjectName="Organization"
			enableCountByExample="false" enableUpdateByExample="false"
			enableDeleteByExample="false" enableSelectByExample="false"
			selectByExampleQueryId="false">
			<property name="useActualColumnNames" value="true" />
		</table>
	</context>
</generatorConfiguration>  